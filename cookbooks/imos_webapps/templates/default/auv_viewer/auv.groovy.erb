grails.serverURL = "<%= @custom_parameters['https'] ? 'https' : 'http' %>://<%= @custom_parameters['vhost'] %>/<%= @custom_parameters['name'] %>"

geoserver {
    context = "<%= @custom_parameters['geoserver_context'] || 'geoserver' %>"
    url = "<%= @custom_parameters['geoserver_url'] || 'https://geoserver-123.aodn.org.au/geoserver' %>"
    namespace = "<%= @custom_parameters['geoserver_namespace'] || 'imos' %>"
    layerNames {
        tracks = "<%= @custom_parameters['geoserver_layer_tracks'] || 'auv_tracks_vw' %>"
        images = "<%= @custom_parameters['geoserver_layer_images'] || 'auv_images_vw' %>"
    }
}

baseLayer {
    url = "<%= @custom_parameters['base_layer_url'] || 'https://geoserver-static.aodn.org.au/geoserver/baselayers/wms' %>"
    name = "<%= @custom_parameters['base_layer_name'] || 'default_basemap_simple' %>"
}

imageFileServer {
    url = "<%= @custom_parameters['image_file_server_url'] || 'https://data.aodn.org.au/IMOS/public/AUV/' %>"
}

mest {
    url = "<%= @custom_parameters['mest_url'] || 'http://imosmest.emii.org.au/geonetwork' %>"
}

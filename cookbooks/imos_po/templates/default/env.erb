#!/bin/bash
<% @vars.each do |k, v| %>
<%= "export #{k}='#{v}'" %>
<% end %>

# source utility functions from data-services repository
for file in <%= @lib %>/*; do
    source $file
done
declare -r SYSLOG_FACILITY=<%= node['imos_po']['watches']['syslog_facility'] %>; export SYSLOG_FACILITY

export LOG_DIR="<%= node['imos_po']['data_services']['log_dir'] %>"

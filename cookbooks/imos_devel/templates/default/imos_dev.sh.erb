#!/bin/bash

SRC=<%= node['imos_devel']['grails']['src'] %>

# create a bunch of aliases for an application
# $1 - app name (portal, aatams, etc)
# $2 - port
# $3 - src directory for application
# $4 - grails version for application
aliases_for_app() {
    local app=$1; shift
    local -i port=$1; shift
    local app_dir=$1; shift
    local grails_version=$1; shift

    eval "alias ${app}='cd $app_dir'"
    eval "alias ${app}_run='cd $app_dir && yes | gvm install grails $grails_version && gvm use grails $grails_version && grails -Dserver.port=$port run-app'"
    eval "alias ${app}_test='cd $app_dir && yes | gvm install grails $grails_version && gvm use grails $grails_version && grails test-app'"
}

aliases_for_app portal 8080 $SRC/aodn-portal 1.3.7
aliases_for_app aatams 8081 $SRC/aatams 1.3.7
aliases_for_app gogoduck 8082 $SRC/go-go-duck 2.2.0

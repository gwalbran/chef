dirmessage_enable=YES
# banner_file=/etc/vsftpd/vsftpd.banner # edit banner first
chown_uploads=YES
chown_username=ftp
xferlog_enable=YES
idle_session_timeout=600
data_connection_timeout=120
ascii_upload_enable=NO
ascii_download_enable=NO
chroot_list_enable=YES
listen=YES
ls_recurse_enable=NO
local_enable=YES
file_open_mode=0666
local_umask=0002
pam_service_name=pam_vsftpd
# If enabled, all non-anonymous logins are classed as "guest" logins. A guest
# login is remapped to the user specified in the guest_username setting.
guest_enable=YES
guest_username=ftp
# This is important
ssl_enable=NO

# Choose what you like, if you accept anon-connections you may want to enable
# this
allow_anon_ssl=NO

# it's a matter of performance i guess
force_local_data_ssl=NO

# choose what you like
force_local_logins_ssl=NO

ssl_tlsv1=NO
ssl_sslv2=NO
ssl_sslv3=NO

secure_chroot_dir=/var/run/vsftpd/empty
chroot_list_file=/etc/vsftpd.chroot_list
chroot_local_user=YES

virtual_use_local_privs=YES
user_config_dir=/etc/vsftpd/vusers
local_root=<%= node['imos_vsftpd']['local_root'] %>

# Anonymous settings
anonymous_enable=YES
anon_upload_enable=NO
anon_mkdir_write_enable=NO
anon_root=<%= node['imos_vsftpd']['anon_root'] %>

pasv_enable=yes
pasv_min_port=64000
pasv_max_port=64100
pasv_address=<%= node['network']['public_ipv4'] %>

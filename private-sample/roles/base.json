{
    "name": "base",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "description": "Base role used by all nodes",
    "default_attributes": {
        "authorization": {
            "sudo": {
                "groups": ["admin","wheel","sysadmin"],
                "include_sudoers_d": true,
                "passwordless": true,
                "users": []
            }
        }
    },
    "run_list": [
        "recipe[imos_chef_solo]",
        "recipe[imos_core::lvm]",
        "recipe[imos_mounts]",
        "recipe[hostname]",
        "recipe[apt]",
        "recipe[imos_users]",
        "recipe[sudo]",
        "recipe[git]",
        "recipe[ntp]",
        "recipe[timezone-ii]",
        "recipe[imos_core::locale]",
        "recipe[imos_core::email_forward]",
        "recipe[imos_core::environment]",
        "recipe[imos_postfix]",
        "recipe[imos_core::motd]",
        "recipe[imos_core::unattended_upgrades]",
        "recipe[imos_core::logrotate]",
        "recipe[imos_core::xml_tools]",
        "recipe[sysctl]"
    ]
}

{
    "chef_environment": "_default",
    "name": "dev.json",
    "run_list": [
        "role[base]",
        "role[restore]",
        "recipe[ssl]",
        "recipe[imos_dns::etc_hosts]",
        "recipe[imos_postgresql::official_postgresql]",
        "recipe[database_migrations]",
        "recipe[imos_webapps::generic_webapp]"
    ],
    "imos_users": {
        "groups": [ "users" ]
    },
    "aliases": [
        "po.aodn.org.au"
    ],
    "imos_dns": {
        "etc_hosts": {
            "10.11.12.13": "po.aodn.org.au geoserver-123.aodn.org.au geoserver-rc.aodn.org.au"
        }
    },
    "tz": "Australia/Hobart",
    "tomcat": {
        "user":  "vagrant",
        "group": "vagrant"
    },
    "imos_backup": {
        "restore": {
            "allow": true,
            "ssh_opts": "-o StrictHostKeyChecking=no",
            "directives": [
                {
                    "from_host":  "1-aws-syd.emii.org.au",
                    "from_model": "pgsql",
                    "files":      [ "geonetwork/public.dump" ]
                },
                {
                    "from_host":  "2-nsp-mel.emii.org.au",
                    "from_model": "pgsql",
                    "files":      [
                        "harvest/aodn_dsto.dump",
                        "harvest/soop_asf_mft.dump"
                    ]
                }
            ]
        }
    },
    "database_migrations": {
        "migrations": [
            "marvl_data_atlas"
        ]
    },
    "postgresql": {
        "clusters": [{
            "name": "main",
            "roles": [
                "db_po_main",
                "marvl_data_atlas",
                "geonetwork"
            ],
            "git_extension_support": [
                {
                    "name": "imos",
                    "repository": "https://github.com/aodn/harvest_sql_library"
                }
            ],
            "databases": [
                "harvest",
                "geonetwork"
            ],
            "config": {
                "listen_addresses": "*"
            },
            "hba": [
                {
                    "type": "hostssl", "db": "all", "user": "postgres", "addr": "0.0.0.0/0", "method": "reject"
                },
                {
                    "type": "local", "db": "all", "user": "postgres", "addr": "", "method": "ident"
                },
                {
                    "type": "hostssl", "db": "all", "user": "all", "addr": "0.0.0.0/0", "method": "md5"
                },
                {
                    "type": "host", "db": "all", "user": "all", "addr": "0.0.0.0/0", "method": "md5"
                }
            ]
        }]
    },
    "webapps": {
        "instances": [
            {
                "name":          "default",
                "vhost":         "po.aodn.org.au",
                "aliases":       [ "10.11.12.13" ],
                "port":          "8080",
                "java_options":  "-Xmx3G -Xms1G -XX:PermSize=512m -DGEOSERVER_DATA_DIR=/vagrant/shared_src/geoserver -Dgeonetwork.jeeves.configuration.overrides.file=/var/lib/tomcat7/default/conf/geonetwork/config-overrides.xml -Dgeonetwork.dir=/var/lib/geonetwork",
                "apps": [
                    {
                        "name":                 "imos123",
                        "artifact":             "portal_4_content_testing",
                        "config_template_dir":  "portal",
                        "config_file":          "Portal.groovy",
                        "portal_instance_name": "IMOS",
                        "css_name":             "IMOS",
                        "header_logo":          "IMOS_logo.png",
                        "header_link_text":     "IMOS",
                        "header_href":          "http://imos.org.au/imos.html",
                        "geonetwork_url":       "http://10.11.12.13/geonetwork",
                        "feature_toggles":      {
                            "hierarchicalFacets": true
                        },
                        "known_servers":        [
                            "catami",
                            "geoserver_123_aodn",
                            "geoserver_po_aodn",
                            "geoserver_rc_aodn",
                            "ncwms_aodn",
                            "ncwms_csiro"
                        ]
                    },
                    {
                        "name":           "geoserver",
                        "artifact":       "geoserver_imos_rc",
                        "custom_def":     "geoserver",
                        "data_dir":       "/vagrant/shared_src/geoserver",
                        "jndis":          [ "harvest-read-po", "local-harvest-read" ]
                    },
                    {
                        "name":                  "geonetwork",
                        "artifact":              "GeoNetwork_prod",
                        "config_file":           "config-overrides.xml",
                        "config_template_dir":   "geonetwork",
                        "schema_plugins":        [ "iso19135", "iso19139-anzlic", "iso19139-mcp-1-4", "iso19139-mcp-1-5", "iso19139-mcp-2-0" ],
                        "geoserver":             "http://localhost/geonetwork",
                        "jndis":                 [ "geonetwork" ],
                        "custom_def":            "geonetwork",
                        "data_dir":              "/var/lib/geonetwork",
                        "classification_scheme": {
                            "parameterCategories": "http://vocab.aodn.org.au/def/ClassScheme/parameter1",
                            "platformCategories":  "http://vocab.aodn.org.au/def/ClassScheme/platform1"
                        }
                    }
                ]
            }
        ]
    }
}
